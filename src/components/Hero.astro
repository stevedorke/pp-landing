<style>
  .hero {
    background: linear-gradient(145deg, #0f0a3c 0%, #1e1460 50%, #2d1f7a 100%);
    color: #fff;
    padding: 80px 24px 100px;
    overflow: hidden;
  }
  .hero-inner {
    max-width: 1100px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }
  .badge {
    display: inline-block;
    background: rgba(167,139,250,0.2);
    color: #c4b5fd;
    font-size: 0.78rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    padding: 6px 14px;
    border-radius: 100px;
    margin-bottom: 20px;
    border: 1px solid rgba(167,139,250,0.3);
  }
  .headline {
    font-size: clamp(2.4rem, 5vw, 3.8rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 20px;
    letter-spacing: -0.02em;
  }
  .headline em { color: #a78bfa; font-style: normal; }
  .sub {
    font-size: 1.1rem;
    color: rgba(255,255,255,0.72);
    line-height: 1.7;
    max-width: 480px;
    margin-bottom: 36px;
  }
  .cta-row {
    display: flex;
    gap: 14px;
    flex-wrap: wrap;
    margin-bottom: 14px;
  }
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 13px 24px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.95rem;
    transition: transform 0.15s, opacity 0.15s;
    cursor: pointer;
  }
  .btn:hover { transform: translateY(-2px); opacity: 0.9; }
  .btn-primary { background: #fff; color: #1e1b4b; }
  .btn-secondary { background: rgba(255,255,255,0.12); color: #fff; border: 1px solid rgba(255,255,255,0.25); }
  .store-note { font-size: 0.8rem; color: rgba(255,255,255,0.4); }

  /* Phone mockup */
  .hero-mockup { display: flex; justify-content: center; }
  .phone-shell {
    width: 220px;
    height: 440px;
    background: rgba(255,255,255,0.05);
    border-radius: 36px;
    border: 2px solid rgba(255,255,255,0.15);
    padding: 24px 16px;
    display: flex;
    flex-direction: column;
    box-shadow: 0 40px 80px rgba(0,0,0,0.4), 0 0 0 1px rgba(167,139,250,0.15);
  }
  .phone-screen { flex: 1; display: flex; flex-direction: column; gap: 18px; }
  .mock-type {
    font-size: 2.4rem;
    font-weight: 800;
    text-align: center;
    color: #c4b5fd;
    letter-spacing: 0.1em;
    padding-top: 12px;
  }
  .mock-bars { display: flex; flex-direction: column; gap: 10px; }
  .mock-bar {
    height: 8px;
    background: rgba(255,255,255,0.1);
    border-radius: 99px;
    overflow: hidden;
  }
  .mock-bar span {
    display: block;
    height: 100%;
    background: linear-gradient(90deg, #818cf8, #a78bfa);
    border-radius: 99px;
  }
  .mock-fns {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8px;
    margin-top: 8px;
  }
  .fn {
    background: rgba(167,139,250,0.2);
    border: 1px solid rgba(167,139,250,0.35);
    border-radius: 10px;
    text-align: center;
    padding: 10px;
    font-weight: 700;
    font-size: 0.9rem;
    color: #c4b5fd;
  }

  @media (max-width: 768px) {
    .hero-inner { grid-template-columns: 1fr; gap: 40px; }
    .hero-mockup { display: none; }
  }
</style>
